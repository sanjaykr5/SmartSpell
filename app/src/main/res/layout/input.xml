<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content" >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_toEndOf="@+id/image_select"
            android:layout_toRightOf="@+id/image_select"
            android:layout_marginLeft="30dp"
            android:id="@+id/image"/>

        <Button
            android:text="Select Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:onClick="selectImage"
            android:id="@+id/image_select"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="97dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_below="@+id/image"
            android:layout_alignLeft="@+id/image_select"
            android:layout_alignStart="@+id/image_select"
            android:layout_marginTop="33dp"
            android:id="@+id/editText" />

        <Button
            android:text="Read_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignStart="@+id/editText"
            android:layout_marginTop="36dp"
            android:id="@+id/Read_out" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_alignTop="@+id/Read_out"
            android:layout_alignLeft="@+id/image"
            android:layout_alignStart="@+id/image"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:id="@+id/floatingActionButton" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/floatingActionButton"
            android:layout_alignEnd="@+id/floatingActionButton"
            android:layout_marginTop="36dp"
            android:id="@+id/editText2" />
    </RelativeLayout>
</ScrollView>